<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/siv"
    android:background="#ff0e0f0e"
    android:clickable="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pianoLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="C"
            android:id="@+id/cKey"
            android:background="#ffffffff"
            android:nestedScrollingEnabled="false"
            android:layout_margin="5dp"
            android:longClickable="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="D"
            android:id="@+id/dKey"
            android:background="#ffffffff"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:onClick="onClickDKey"
            android:longClickable="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="E"
            android:id="@+id/eKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickEKey"
            android:longClickable="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="F"
            android:id="@+id/fKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickFKey"
            android:longClickable="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="G"
            android:id="@+id/gKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickGKey"
            android:longClickable="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="A"
            android:id="@+id/aKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickAKey"
            android:longClickable="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="B"
            android:id="@+id/bKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickBKey"
            android:longClickable="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:text="C"
            android:id="@+id/ccKey"
            android:layout_gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_margin="5dp"
            android:onClick="onClickCKey"
            android:longClickable="true"/>

    </LinearLayout>

</RelativeLayout>
